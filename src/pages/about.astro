---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Info - ${SITE_TITLE}`} description="About Regis" />
    <style>
      @font-face {
        font-family: 'CastoroTitling';
        src: url('/fonts/CastoroTitling-Regular.woff') format('woff');
        font-weight: normal;
        font-style: normal;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        background-color: #000000;
        color: #FFFFFF;
        font-family: 'CastoroTitling', serif;
        min-height: 100vh;
        cursor: none;
        overflow-x: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      /* Background image styles */
      #bg-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-image: url('/images/pozadina.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        z-index: -1;

        pointer-events: none;
      }

      * {
        cursor: none !important;
      }

      #custom-cursor {
        position: fixed;
        top: 0;
        left: 0;
        width: 20px;
        height: 20px;
        pointer-events: none;
        z-index: 9999;
        transition: transform 0.1s ease-out;
        transform: translate(-50%, -50%);
      }
      
      #crosshair-x {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 1px;
        border-top: 1px solid #000000;
        pointer-events: none;
        z-index: 9998;
        transform: translateY(-50%);
      }
      
      #crosshair-y {
        position: fixed;
        top: 0;
        left: 0;
        width: 1px;
        height: 100vh;
        border-left: 1px solid #000000;
        pointer-events: none;
        z-index: 9998;
        transform: translateX(-50%);
      }

      /* Header with logo and close button */
      #header {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
        z-index: 10;
      }

      #logo {
        width: 200px;
        height: auto;
      }

      #close-btn {
        font-family: 'CastoroTitling', serif;
        font-size: 24px;
        color: #FF0000;
        background: none;
        border: none;
        text-decoration: none;
        transition: opacity 0.3s ease;
      }
      
      #close-btn:hover {
        opacity: 0.7;
      }

      #content {
        max-width: 80%;
        margin: 0 auto;
        padding: 0 40px;
      }

      .main-text {
        font-family: 'CastoroTitling', serif;
        font-size: 24px;
        line-height: 1.8;
        margin-bottom: 80px;
        color: #FFFFFF;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
      }

      .team-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 80px;
      }

      .team-member {
        font-family: 'CastoroTitling', serif;
        font-size: 20px;
        color: #FFFFFF;
      }

      .email-links {
        display: flex;
        justify-content: center;
        margin-top: 40px;
      }

      .email-link {
        font-family: 'CastoroTitling', serif;
        font-size: 24px;
        color: #FFFFFF;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .email-link:hover {
        color: #FF0000;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        #logo {
          width: 150px;
        }

        #close-btn {
          font-size: 24px;
        }

        #content {
		padding-top: 100px;
          display: flex;
          flex-direction: column;
          align-items: center;
		  width:350px;
        }

        .main-text {
          font-size: 20px;
          width: 100%;
          max-width: 350px;
          margin-bottom: 20px;
          text-align: center;
          box-sizing: border-box;
        }

        .team-info {
          flex-direction: column;
          gap: 20px;
          text-align: center;
          width: 350px;
        }

        .team-member {
          font-size: 18px;
        }

        .email-links {
          width: 350px;
        }

        .email-link {
          font-size: 20px;
        }

        /* Mobile optimizations */
        body {
          cursor: auto;
          overflow-x: hidden;
          padding: 0;
          margin: 0;
        }

        * {
          cursor: pointer !important;
        }

        #custom-cursor,
        #crosshair-x,
        #crosshair-y {
          display: none;
        }

        #close-btn:hover,
        .email-link:hover {
          opacity: 1;
          color: #FFFFFF;
        }
      }
    </style>
  </head>
  <body>
    <!-- Background Image -->
    <div id="bg-image"></div>

    <!-- Header with logo and close button -->
    <div id="header">
      <img id="logo" src="/logo.svg" alt="Logo" />
      <a href="/" id="close-btn">X</a>
    </div>

    <div id="content">
      <p class="main-text">
        GEO2055 is an audio and event production company run by Relja Ćupić (Regis). Specializing in original music composition, recording, sound design, mixing & mastering for film, advertising, and audiovisual/immersive media.
        We operate across events, handling music supervision, curation, and production of shows and concerts.
      </p>

      <div class="team-info">
        <div class="team-member">
          Relja Ćupić — Co-founder & Creative Director
        </div>
        <div class="team-member">
          Minja Kadović — Head of Sales & Partnerships
        </div>
      </div>

      <div class="email-links">
        <a href="mailto:info@geo2055.com" class="email-link">info@geo2055.com</a>
      </div>
    </div>

    <!-- Custom Cursor -->
    <img id="custom-cursor" src="/cursors/cross.svg" alt="Custom cursor" />
    <div id="crosshair-x"></div>
    <div id="crosshair-y"></div>

    <script>
      // Custom cursor functionality - only on desktop
      if (window.innerWidth > 768) {
        const cursor = document.getElementById('custom-cursor');
        const crosshairX = document.getElementById('crosshair-x');
        const crosshairY = document.getElementById('crosshair-y');
        
        document.addEventListener('mousemove', (e) => {
          const mouseX = e.clientX;
          const mouseY = e.clientY;
          
          // Update cursor position directly (no lag)
          cursor.style.left = mouseX + 'px';
          cursor.style.top = mouseY + 'px';
          
          // Update crosshair lines directly (no lag)
          crosshairX.style.top = mouseY + 'px';
          crosshairY.style.left = mouseX + 'px';
        });
      }
    </script>
  </body>
</html>
